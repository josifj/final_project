<div class="page-header">
  <h1>
    Buildings
    <a href="/buildings/new" class="btn btn-lg btn-success">New Building</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>

      <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td>
          <a href="/buildings/<%= building.id %>" class="btn btn-primary">Show</a>
          <a href="/buildings/<%= building.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_building/<%= building.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
