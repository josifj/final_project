<div class="page-header">
  <h3>Shortlist #<%= @shortlist.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @shortlist.user_id %></dd>

      <dt>Listing</dt>
      <dd><%= @shortlist.listing_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/shortlists" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @shortlist.user %>
        <a href="/shortlists/<%= @shortlist.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_shortlist/<%= @shortlist.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
